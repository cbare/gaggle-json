<p id="notice"><%= notice %></p>

<% if @doc==nil then %>

  <p><b>No table found with id: </b> <%= @id %></p>

<% else %>

  <div class="gaggle-data">
    <p>
      <b>Name:</b>
      <span class="gaggle-name"><%= @doc["name"] %></span>
    </p>

    <% if @doc["type"] %>
    <p>
      <b>Type:</b>
      <%= @doc["type"] %>
    </p>
    <% end %>

    <% if @species then %>
    <p>
      <b>Species:</b>
      <span class="gaggle-species"><%= @species %></span>
    </p>
    <% end %>

    <% if @size then %>
    <p>
      <b>Length:</b>
      <span class="gaggle-size"><%= @size %></span>
    </p>
    <% end %>

  </div> 

  <% if @doc.has_key? "description" %>
  <p>
    <b>Description:</b>
    <%= @doc["description"] %>
  </p>
  <% end %>

  <h1><%= @type %></h1>
  <pre class="gaggle-json"><%= @json -%></pre>
  <p><a href="/documents/<%= @id %>">/documents/<%= @id %></a></p>

<% end %>

<%= link_to 'JSON', document_path(@id)%>
